<struts>
 
  <constant name="struts.devMode" value="true" />
 
  <package name="commenter" extends="struts-default">
	  
		<action name="index">
				<result>/WEB-INF/jsp/index.jsp</result>
		</action>
		<action name="helloworld" class="bast1aan.commenter.HelloWorldAction" method="execute">
		  <result name="success">/WEB-INF/jsp/HelloWorld.jsp</result>
		</action>
  </package>
	<package name="commenterjson" extends="json-default">
		<action name="helloworldjson" class="bast1aan.commenter.HelloWorldAction" method="execute">
			<result type="json">
				<param name="includeProperties">
					username,
					message
				</param>
			</result>
		</action>
		<action name="listcomments" class="bast1aan.commenter.action.ListCommentsAction" method="execute">
			<result type="json">
				<param name="includeProperties">
					comments\[\d+\]\..*
				</param>
			</result>
			<interceptor-ref name="json">
				<param name="includeProperties">
					objectId
				</param>
			</interceptor-ref>
		</action>
		<action name="savecomment" class="bast1aan.commenter.action.SaveCommentAction" method="execute">
			<result type="json">
				<param name="includeProperties">
					comment\..*
				</param>
			</result>
			<interceptor-ref name="json">
				<param name="includeProperties">
					comment
				</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack"></interceptor-ref>
		</action>
		<action name="countcomments" class="bast1aan.commenter.action.CountCommentsAction" method="execute">
			<result type="json">
				<param name="includeProperties">
					amount,amounts.*
				</param>
			</result>
			<interceptor-ref name="json">
				<param name="includeProperties">
					objectId,objectIds
				</param>
			</interceptor-ref>
		</action>
	</package>
</struts>
